package RestAssuredTest;

import org.testng.annotations.Test;
import static io.restassured.RestAssured.*;
import static org.hamcrest.Matchers.*;

public class Demo6_XML_Validation {
	
	@Test
	void testSinglecontent() {
		
		given()
		.when()
		.get("url")
		.then()
		.body("CutomerId", equalTo("15"))
		.log().all();
		
		
	}
	
	@Test
	void testMulticontent() {
		
		given()
		.when()
		.get("url")
		.then()
		.body("Cutomer.Id", equalTo("15"))
		.body("Cutomer.FN", equalTo("Bill"))
		.body("Cutomer.LN", equalTo("Anand"))
		.body("Cutomer.city", equalTo("Seattle"));
		
		
	}
	
	//verifying all xml content in single method

}
